{
  "routes": [
    {
      "method": "POST",
      "path": "/user/change-password",
      "handler": "user.changePassword"
    },
    {
      "method": "PUT",
      "path": "/user/update/:id",
      "handler": "user.update"
    },
    {
      "method": "PUT",
      "path": "/user/resetPasswordToken",
      "handler": "user.resetPasswordToken"
    },
    {
      "method": "PUT",
      "path": "/user/resetPassword",
      "handler": "user.resetPassword"
    }
  ]
}
